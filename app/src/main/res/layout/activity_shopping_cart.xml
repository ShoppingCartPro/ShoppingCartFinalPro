<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hsfb.ullauri.finalproject.ScanItems"
    android:id="@+id/RelativeLayout"
    android:orientation="vertical"
    android:background="#195aff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/givenBudget"
        android:id="@+id/currentBudgetTextView"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getBudgetTextView"
        android:layout_alignTop="@+id/currentBudgetTextView"
        android:layout_toEndOf="@+id/currentBudgetTextView"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shoppingScrollView"
        android:layout_margin="20dp"
        android:layout_below="@+id/currentBudgetTextView"
        android:layout_above="@+id/scanButton"
        android:layout_centerInParent="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="@string/scan"
        android:id="@+id/scanButton"
        android:background="@drawable/round_button"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="scanItem" />

</RelativeLayout>
